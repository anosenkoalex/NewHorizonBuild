generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  SALES_HEAD
  LEGAL
  VIEWER
}

enum UnitType {
  APARTMENT
  COMMERCIAL
  PARKING
}

enum UnitStatus {
  FREE
  RESERVED
  SOLD
  INSTALLMENT
  EQUITY
}

enum DealType {
  SALE
  INSTALLMENT
  EQUITY
}

enum DealStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  fullName     String
  passwordHash String   @default("")
  role         UserRole @default(VIEWER)
  deals        Deal[]   @relation("UserDeals")

  // Документы, которые пользователь подписал
  signedDocuments Document[] @relation("UserSignedDocuments")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  address     String?

  /// Ссылка на 3D-модель для веб-viewer (GLB/GLTF/и т.п.)
  threeDModelUrl     String?
  /// Формат модели: "glb", "gltf", "obj" и т.д.
  threeDModelFormat  String?
  /// Опциональное превью (картинка) для списка моделей
  threeDPreviewImage String?

  buildings   Building[]
  units       Unit[]
}

model Building {
  id             String    @id @default(cuid())
  projectId      String
  project        Project   @relation(fields: [projectId], references: [id])
  label          String
  numberOfFloors Int?
  sections       Section[]
  floors         Floor[]
  units          Unit[]
}

model Section {
  id         String    @id @default(cuid())
  buildingId String
  building   Building  @relation(fields: [buildingId], references: [id])
  name       String
  floors     Floor[]
  units      Unit[]
}

model Floor {
  id         String   @id @default(cuid())
  buildingId String
  building   Building @relation(fields: [buildingId], references: [id])
  sectionId  String?
  section    Section? @relation(fields: [sectionId], references: [id])
  number     Int
  units      Unit[]
}

model Unit {
  id              String     @id @default(cuid())
  type            UnitType
  projectId       String
  project         Project    @relation(fields: [projectId], references: [id])
  buildingId      String
  building        Building   @relation(fields: [buildingId], references: [id])
  sectionId       String?
  section         Section?   @relation(fields: [sectionId], references: [id])
  floorId         String?
  floor           Floor?     @relation(fields: [floorId], references: [id])
  number          String?
  area            Float?
  rooms           Int?
  price           Decimal?
  status          UnitStatus @default(FREE)

  /// Ключ элемента в 3D-сцене (для подсветки нужной квартиры)
  modelElementKey String?

  /// Ссылка на 2D-планировку (картинка/схема)
  planImageUrl    String?

  deals           Deal[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  fullName  String
  phone     String
  email     String?
  deals     Deal[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deal {
  id        String   @id @default(cuid())
  unitId    String
  unit      Unit     @relation(fields: [unitId], references: [id])
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  managerId String
  manager   User     @relation("UserDeals", fields: [managerId], references: [id])
  type      DealType
  status    DealStatus
  documents Document[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DocumentTemplate {
  id        String   @id @default(cuid())
  name      String   // "Договор купли-продажи"
  type      String   // "CONTRACT", "ACT", "PAYMENT_SCHEDULE" и т.п.
  content   String   // Текст/HTML с {{client.fullName}}, {{unit.number}} и т.д.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  documents Document[]
}

model Document {
  id         String   @id @default(cuid())
  dealId     String
  deal       Deal     @relation(fields: [dealId], references: [id])
  type       String
  fileUrl    String?  // может быть пустым, если документ только в content
  content    String?  // сгенерированный текст/HTML документа
  templateId String?
  template   DocumentTemplate? @relation(fields: [templateId], references: [id])

  /// Подпись документа
  signedAt       DateTime?
  signedByUserId String?
  signedBy       User?    @relation("UserSignedDocuments", fields: [signedByUserId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
